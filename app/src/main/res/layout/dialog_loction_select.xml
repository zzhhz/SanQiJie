<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_14"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14">

        <TextView
            android:id="@+id/tv_dial_logcation_weight_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/nav_bg_color"
            android:textSize="@dimen/dp_17" />

        <TextView
            android:id="@+id/tv_dial_logcation_weight_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/nav_bg_color"
            android:textSize="@dimen/dp_17" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <common.view.widget.NumberPickerView
            android:id="@+id/np_load1_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:contentDescription="test_number_picker_view"
            app:npv_DividerColor="#dddddd"
            app:npv_ItemPaddingVertical="15dp"
            app:npv_ShowCount="5"
            app:npv_TextColorNormal="#666666"
            app:npv_TextColorSelected="#333333"
            app:npv_TextSizeNormal="@dimen/dp_15"
            app:npv_TextSizeSelected="@dimen/dp_17"
            app:npv_WrapSelectorWheel="true" />

        <common.view.widget.NumberPickerView
            android:id="@+id/np_load2_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:contentDescription="test_number_picker_view"
            app:npv_DividerColor="#dddddd"
            app:npv_ItemPaddingVertical="15dp"
            app:npv_ShowCount="5"
            app:npv_TextColorNormal="#666666"
            app:npv_TextColorSelected="#333333"
            app:npv_TextSizeNormal="@dimen/dp_15"
            app:npv_TextSizeSelected="@dimen/dp_17"
            app:npv_WrapSelectorWheel="true" />


    </LinearLayout>

</LinearLayout>