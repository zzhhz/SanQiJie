<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="13dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="13dp">

    <ImageView
        android:id="@+id/iv_charge_order_goods_pic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/forget_pwd_bg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_charge_order_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年终特惠喵星人可用帆布袋" />

        <TextView
            android:id="@+id/tv_charge_order_goods_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="可爱猫" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_charge_order_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="￥35.00" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/dp_6">

                <TextView
                    android:id="@+id/tv_charge_order_goods_price_ori"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="￥35.00" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_gravity="center"
                    android:background="#bcbcbc"
                    ></TextView>

            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_charge_order_goods_piece"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x1"
        android:textColor="@color/red"/>
</LinearLayout>