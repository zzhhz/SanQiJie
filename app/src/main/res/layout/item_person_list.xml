<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.chehubang.duolejie.widget.CircleImageView
        android:id="@+id/iv_ld_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@drawable/picsp"/>

    <TextView
        android:id="@+id/tv_ld_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_ld_head"
        android:text="刘德华"
        android:textColor="#333333"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_ld_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="11dp"
        android:layout_marginTop="10dp"
        android:text="12-22 14:54"
        android:textColor="#666666"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_ld_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ld_name"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_ld_head"
        android:text="地区：三里屯"
        android:textColor="#666666"
        android:textSize="12sp"/>
</RelativeLayout>