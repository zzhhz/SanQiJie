<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_68"
        android:animateLayoutChanges="true"
        android:paddingTop="@dimen/dp_20">

        <ImageView
            android:id="@+id/iv_luck_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/nav_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxEms="7"
            android:singleLine="true"
            android:text="商家详情"
            android:textColor="@color/titleColor"
            android:textSize="17sp"/>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_gift_detail_shop_pic"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/picdd"
                android:visibility="gone"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">

                <TextView
                    android:id="@+id/tv_ld_jianjie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:background="@drawable/shape_border_circle_d9483c"
                    android:paddingBottom="3dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="3dp"
                    android:text="商家简介"
                    android:textColor="#d9483c"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_ld_jianjie_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/tv_ld_jianjie"
                    android:text="新秀制造商"
                    android:textColor="#333333"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_ld_jianjie_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ld_jianjie_title"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/tv_ld_jianjie"
                    android:textColor="#666666"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_ld_jianjie_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ld_jianjie_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/tv_ld_jianjie"
                    android:textColor="#666666"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tv_ld_jianjie_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ld_jianjie_address"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/tv_ld_jianjie"
                    android:textColor="#666666"
                    android:textSize="13sp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/divider"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_ld_qihao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:text="期号：2510064"
                    android:textColor="#666666"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_show_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="11dp"
                    android:text="你尚未参加本次活动"
                    android:textColor="#666666"
                    android:textSize="14sp"/>

                <View
                    android:id="@+id/view_qihao"
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_below="@+id/tv_ld_qihao"
                    android:layout_marginTop="10dp"
                    android:background="@color/divider"/>

                <TextView
                    android:id="@+id/tv_ld_need_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_qihao"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="6dp"
                    android:text="需多乐券：1000劵/人"
                    android:textColor="#333333"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/view_qihao"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/nav_more"
                    android:visibility="gone"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/divider"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="11dp"
                    android:text="进度条"
                    android:textColor="#333333"
                    android:textSize="14sp"/>

                <ProgressBar
                    android:id="@+id/progressbar_ld"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="200dp"
                    android:layout_height="7.5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@+id/tv_progressbar"
                    android:max="100"
                    android:progressDrawable="@drawable/progressbar"/>

                <TextView
                    android:id="@+id/tv_pregress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_toRightOf="@+id/progressbar_ld"
                    android:text="100%"
                    android:textColor="@color/red"/>

                <TextView
                    android:id="@+id/tv_canyu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_progressbar"
                    android:layout_marginLeft="11dp"
                    android:text="参与抽奖"
                    android:textColor="#333333"
                    android:textSize="14sp"/>

                <com.chehubang.duolejie.widget.QuantityView
                    android:id="@+id/amount_view_ld"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_progressbar"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="-6dp"
                    android:layout_toRightOf="@+id/tv_canyu"
                    app:qv_addButtonText="  +  "
                    app:qv_quantity="1"
                    app:qv_removeButtonBackground="@color/red"
                    app:qv_removeButtonText="  -  "
                    app:qv_removeButtonTextColor="@color/white"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/divider"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="10dp"
                android:text="本期抽奖人员"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/divider"/>

            <common.view.widget.MyListview
                android:id="@+id/lv_ld_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:divider="@color/divider"
                android:dividerHeight="1dp"/>

