<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="9dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_address_manage_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anna" />

        <TextView
            android:id="@+id/tv_item_address_manage_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="17611263456" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_item_address_manage_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="北京市东城区幸福三号" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_item_address_manage_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="默认地址"
            android:textColor="#d84e46"
            android:focusable="false"/>

        <TextView
            android:id="@+id/tv_item_address_manage_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/iconbj"
            android:drawablePadding="5dp"
            android:text="编辑" />

        <TextView
            android:id="@+id/tv_item_address_manage_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/icon_sc"
            android:drawablePadding="5dp"
            android:text="删除" />
    </LinearLayout>
</LinearLayout>