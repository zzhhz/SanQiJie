<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/fl_address_manage_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_68"
            android:animateLayoutChanges="true"
            android:background="@android:color/white"
            android:paddingTop="@dimen/dp_20">

            <ImageView
                android:id="@+id/iv_address_manage_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/nav_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:maxEms="7"
                android:singleLine="true"
                android:text="管理收货地址"
                android:textColor="@color/titleColor"
                android:textSize="18dp" />

        </FrameLayout>

        <common.view.widget.MyListview
            android:layout_below="@+id/fl_address_manage_title"
            android:id="@+id/lv_address_manage_list"
            android:divider="#f5f5f5"
            android:dividerHeight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_address_manage_add"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/dp_50"
            android:background="@android:color/holo_red_light"
            android:clickable="true"
            android:gravity="center"
            android:text="添加新地址"
            android:textColor="#ffffff"
            android:textSize="16dp" />

    </LinearLayout>


</ScrollView>