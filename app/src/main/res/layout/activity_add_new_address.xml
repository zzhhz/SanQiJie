<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_68"
        android:animateLayoutChanges="true"
        android:background="@android:color/white"
        android:paddingTop="@dimen/dp_20">

        <ImageView
            android:id="@+id/iv_new_address_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/nav_left" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:maxEms="7"
            android:singleLine="true"
            android:text="添加新地址"
            android:textColor="@color/titleColor"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_new_address_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_13"
            android:gravity="center_vertical"
            android:text="保存" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:paddingBottom="22dp"
        android:paddingLeft="5dp"
        android:paddingTop="22dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人"
            android:textColor="@color/titleColor"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_add_address_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:background="@null"
            android:textColorHint="#666666" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@android:color/white"
        android:paddingBottom="22dp"
        android:paddingLeft="5dp"
        android:paddingTop="22dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话"
            android:textColor="@color/titleColor"
            android:textSize="16sp" />

        <EditText
            android:inputType="phone"
            android:id="@+id/et_add_address_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:background="@null"
            android:textColorHint="#666666" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_new_address_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@android:color/white"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="22dp"
        android:paddingLeft="5dp"
        android:paddingTop="22dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在地区"
            android:textColor="@color/titleColor"
            android:textSize="16sp" />
      <!--  <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:background="@null"
            android:textColorHint="#666666" />-->

        <TextView
            android:id="@+id/tv_add_address_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_20"
            android:drawableRight="@drawable/nav_more"
            android:gravity="right"
            android:textColor="#666666"
            android:text="请选择" />
    </LinearLayout>

    <!--<LinearLayout
        android:id="@+id/ll_new_address_street"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@android:color/white"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="22dp"
        android:paddingLeft="5dp"
        android:paddingTop="22dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="街道"
            android:textColor="#666666"
            android:textSize="@dimen/dp_18" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:background="@null"
            android:textColorHint="#666666" />

      &lt;!&ndash;  <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_20"
            android:drawableRight="@drawable/nav_more"
            android:gravity="right"
            android:text="请选择" />&ndash;&gt;
    </LinearLayout>-->

    <EditText
        android:id="@+id/tv_add_address_location_details"
        android:paddingLeft="10dp"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@android:color/white"
        android:hint="详细地址"
        android:gravity="left"
        android:textSize="14sp"
        android:textColor="#999999"
        android:paddingBottom="@dimen/dp_12" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:paddingRight="@dimen/dp_10"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/sp_16"
            android:text="设置默认地址" />

        <CheckBox
            android:id="@+id/cb_add_address_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"/>
    </FrameLayout>

</LinearLayout>
