<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_order_item_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/home"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/nav_more"
            android:gravity="center_vertical"
            android:text="美利云"/>

        <TextView
            android:id="@+id/tv_order_item_shipping_statue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="卖家已发货"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#f3f3f3"
        android:orientation="horizontal"
        android:padding="7dp">

        <ImageView
            android:id="@+id/iv_order_item_goods_pic"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="fitXY"
            android:src="@drawable/forget_pwd_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_order_item_goods_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_50"
                    android:text="美丽奴女士圆领毛衫"/>

                <TextView
                    android:id="@+id/tv_order_item_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="￥299"
                    android:textColor="@android:color/black"/>

            </FrameLayout>

            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_order_item_goods_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="蓝色：M码"/>


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    >

                    <TextView
                        android:id="@+id/tv_order_item_goods_price_ori"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="￥399"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_gravity="center"
                        android:background="#bcbcbc"
                        ></TextView>

                </FrameLayout>


            </FrameLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_order_item_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right"
            android:text="共1件商品"/>

        <TextView
            android:id="@+id/tv_order_item_goods_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/dp_10"
            android:text="合计：￥299"/>

        <TextView
            android:id="@+id/tv_order_item_goods_delivery_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="（含运费：￥0）"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_order_item_change"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_border_gray"
            android:gravity="center"
            android:padding="5dp"
            android:text="换货"
            android:textColor="#ff4937"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_order_item_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_corner_red"
            android:padding="5dp"
            android:text="退货退款"
            android:textColor="@android:color/white"/>
    </LinearLayout>


</LinearLayout>