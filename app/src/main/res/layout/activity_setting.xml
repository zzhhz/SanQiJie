<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_68"
        android:animateLayoutChanges="true"
        android:paddingTop="@dimen/dp_20">

        <ImageView
            android:id="@+id/iv_setting_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@drawable/nav_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxEms="7"
            android:singleLine="true"
            android:text="设置"
            android:textColor="@color/titleColor"
            android:textSize="18dp" />

    </FrameLayout>


    <TextView
        android:id="@+id/tv_setting_push"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white"
        android:drawablePadding="@dimen/dp_15"
        android:drawableRight="@drawable/nav_more"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14"
        android:text="消息推送"
        android:visibility="gone"
        android:textColor="#333333"
        android:textSize="@dimen/dp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.1"
        android:background="#dddddd"
        android:paddingLeft="@dimen/dp_14" />

    <FrameLayout
        android:id="@+id/fl_setting_clear"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14"
            android:text="消除缓存"
            android:textColor="#333333"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/tv_setting_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14"
            android:text="0.00M"
            android:drawableRight="@drawable/nav_more"
            android:drawablePadding="@dimen/dp_4"
            android:textColor="#333333"
            android:textSize="@dimen/dp_14" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl_setting_sugestion"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14"
            android:text="意见反馈"
            android:textColor="#333333"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14"
            android:textColor="#333333"
            android:drawableLeft="@drawable/nav_more"
            android:textSize="@dimen/dp_14" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_7"
        android:background="#dddddd"
        android:visibility="gone"
        android:paddingLeft="@dimen/dp_14" />

    <TextView
        android:id="@+id/tv_setting_share"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white"
        android:clickable="true"
        android:drawablePadding="@dimen/dp_15"
        android:drawableRight="@drawable/nav_more"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14"
        android:text="APP分享"
        android:textColor="#333333"
        android:visibility="gone"
        android:textSize="@dimen/dp_14" />

    <TextView
        android:id="@+id/tv_setting_exit"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="48dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@android:color/holo_red_light"
        android:clickable="true"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="#ffffff"
        android:textSize="16dp" />

</LinearLayout>