<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:animateLayoutChanges="true"
        android:background="@android:color/white"
        android:paddingTop="25dp">

        <TextView
            android:id="@+id/tv_category_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:drawableLeft="@drawable/nav_left"
            android:drawablePadding="8dp"
            android:padding="10dp"
            android:text="返回"
            android:textColor="@android:color/white"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/tv_category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="服装"
            android:textColor="@color/titleColor"
            android:textSize="17dp"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/tv_home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f6f6f6">

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_tab_item_select"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            app:tabGravity="fill"
            app:tabIndicatorColor="#d9483c"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="#d9483c"
            app:tabTextColor="@android:color/black"/>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="#eeeeee"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/gv_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@android:color/white"
        android:divider="#f3f3f3"
        android:dividerHeight="0.5dp"
        android:horizontalSpacing="@dimen/dp_10"
        android:numColumns="2"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/dp_15"/>

</LinearLayout>