<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_express_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="3dp"
            android:text="2016年4月27日"
            android:textColor="@color/lightgray"
            android:textIsSelectable="true"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tv_express_time_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="00:27:45"
            android:textColor="@color/lightgray"
            android:textIsSelectable="true"
            android:textSize="12sp"/>


    </LinearLayout>

    <!-- 左边 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <!-- 上面的竖线 -->
        <View
            android:id="@+id/view_top_line"
            android:layout_width="2dp"
            android:layout_height="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-1dp"
            android:background="@color/lightgray"
            />

        <!-- 圆点 -->
        <ImageView
            android:id="@+id/iv_expres_spot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/express_point_old"
            />

        <!-- 竖线 -->
        <View
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/lightgray"
            />

    </LinearLayout>

    <!-- 右边 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="17dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_express_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/gray"
            android:textIsSelectable="true"
            android:textSize="16sp"
            android:layout_marginBottom="@dimen/dp_20"
            />

        <!-- 底部分割线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lightgray"
            />
    </LinearLayout>


</LinearLayout>